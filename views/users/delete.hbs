<nav class="navbar">
    <a href="/"><label>NodeJs + Express CRUD</label></a>
</nav>

<section class="content">
    <header class="container">
        <div class="row">
            <div class="col col-md-4">
                <h1>Delete user</h1>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col col-md-4 offset-md-4">
                <div class="row">
                    <label class="del-title">First Name: </label>
                    <label class="del-description">{{user.first_name}}</label>
                </div>

                <div class="row">
                    <label class="del-title">Last Name: </label>
                    <label class="del-description">{{user.last_name}}</label>
                </div>

                <div class="row">
                    <form method="post" action="/delete/{{user.id}}">
                        <input type="submit" class="btn btn-outline-danger" value="Delete">
                        <a href="/" class="btn btn-danger" >Cancel</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>