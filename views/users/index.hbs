<nav class="navbar">
    <label>NodeJs + Express USER CRUD</label>
</nav>

<section class="content">
    <header class="container">
        <div class="row">
            <div class="col col-md-2">
                <h1>All Users</h1>
            </div>
            <div class="col">
                <a href="/create" class="btn btn-outline-primary">New User</a>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col col-md-8 offset-md-2">
                <table class="table table-striped">
                    <tr>
                        <th>ID</th>
                        <th>FIRST NAME</th>
                        <th>LAST NAME</th>
                        <th colspan="3">Action</th>

                    </tr>
                    {{#each users }}
                    <tr>
                        <td>{{ this.id }}</td>
                        <td>{{ this.first_name }}</td>
                        <td>{{ this.last_name }} </td>
                        <td><a href="/update/{{ this.id }}"><i class="fa fa-lg fa-pencil-square-o" aria-hidden="true"></i></a></td>
                        <td><a href="/delete/{{ this.id }}"><i class="fa fa-lg fa-trash" aria-hidden="true"></i></a></td>
                    </tr>
                    {{/each }}
                </table>
            </div>
        </div>
    </div>
</section>